@model KursovaRabota.ViewModels.CompetitionVMs.CompetitionGetAllViewModel

@{
    ViewData["Title"] = "All Competitions";
}

<h1>All Competitions</h1>

<div class="mb-3">
    <a asp-controller="Competition" asp-action="Add" class="btn btn-success">Add Competition</a>
</div>

@if (Model.Competitions.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Subject</th>
                <th>Type</th>
                <th>Location</th>
                <th>Max Participants</th>
                <th>Registration Deadline</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var competition in Model.Competitions)
            {
                <tr>
                    <td>@competition.Name</td>
                    <td>@competition.Description</td>
                    <td>@competition.Subject.SubjectName</td>
                    <td>@competition.CompetitionType.Type</td>
                    <td>@competition.Location</td>
                    <td>@competition.MaxParticipants</td>
                    <td>@competition.RegistrationDeadline.ToString("yyyy-MM-dd")</td>
                    <td>
                        <form asp-controller="Competition" asp-action="GetAllUsers" method="get">
                            <input type="hidden" name="id" value="@competition.Id" />
                            <button type="submit" class="btn btn-primary">View Users</button>
                        </form>
                        <form asp-controller="Competition" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@competition.Id" />
                            <button type="submit" class="btn btn-danger">Deactivate</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No competitions available.</p>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
