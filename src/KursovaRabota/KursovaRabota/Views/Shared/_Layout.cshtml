<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - KursovaRabota</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/KursovaRabota.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">KursovaRabota</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Начална страница</a>
                        </li>


                        @if (User.IsInRole("Admin") || User.IsInRole("Teacher"))
                        {
                            <li class="nav-item">
                                <a asp-controller="Subject" asp-action="Add" class="nav-link text-dark">Добави предмет</a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="CompetitionType" asp-action="Add" class="nav-link text-dark">Добави тип състезание</a>
                            </li>


                            <li class="nav-item">
                                <a asp-controller="Competition" asp-action="GetAll" class="nav-link text-dark">Виж състезания</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a asp-controller="User" asp-action="GetAllUnregistered" class="nav-link text-dark">Нерегистрирани потребители</a>
                            </li>

                            <li class="nav-item">
                                <a asp-controller="User" asp-action="GetAll" class="nav-link text-dark">Регистрирани потребители</a>
                            </li>
                        }
                    </ul>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div>
                            <p>Hello @User.Identity.Name</p>
                            <a asp-controller="User" asp-action="Logout" class="btn btn-danger">Излез</a>
                        </div>
                    }
                    else
                    {
                        <div>
                            <a asp-controller="User" asp-action="Login" class="btn btn-primary">Влез</a>
                            <a asp-controller="User" asp-action="Register" class="btn btn-secondary">Регистрирай се</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            <partial name="_Notifications" />
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - KursovaRabota - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
